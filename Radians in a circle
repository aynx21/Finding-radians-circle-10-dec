#include <iostream>
using namespace std;
int a, b, c, d;
float area_of_circle(float radius, float area){
   cout<< " Enter the radius of the circle \n " ;
   cin >> radius;

    area = 2*3.1416*radius*radius ;
    
    cout << " Area of the circle with radius\t" << radius << "  is   " << area <<endl;
    
    return area;
}

int main(){
    
    area_of_circle( a, b);
    area_of_circle( c, d);
    
}
